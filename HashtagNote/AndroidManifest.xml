<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duyhung.hashtagnote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.duyhung.hashtagnote.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.duyhung.hashtagnote.NoteAddActivity"
            android:label="@string/title_activity_note_add"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.duyhung.hashtagnote.NoteDetailActivity"
            android:label="@string/title_activity_note_detail" >
        </activity>
        <activity
            android:name="com.duyhung.hashtagnote.NoteEditActivity"
            android:label="@string/title_activity_note_detail"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.duyhung.hashtagnote.HashtagListFragment"
            android:label="@string/title_activity_hashtag_list_fragment" >
        </activity>
        <activity
            android:name="com.duyhung.hashtagnote.NoteListFragment"
            android:label="@string/title_activity_note_list_fragment" >
        </activity>
    </application>

</manifest>
